<!DOCTYPE html>
<html>
<head>
  <title>School Bus Routing</title>
  <%= stylesheet_link_tag "application", "jquery-gmaps-latlon-picker", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "jquery-gmaps-latlon-picker", "data-turbolinks-track" => true %>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCM3qFzoj-zZe_JRHLO1A3Ag7XU5_2EKmU"></script>

  <%#= html_import_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "VRP", root_path, method: :get, class: "navbar-brand" %>
  </div>

  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav navbar-right navbar-user">
      <li>
        <%= link_to optimum_route_dashboards_path, method: :get do %>
            <i class="glyphicon glyphicon-list"></i> Optimized Routes
        <% end %>
      </li>
      <li>
        <%= link_to depots_path, method: :get do %>
            <i class="glyphicon glyphicon-list"></i> Location List
        <% end %>
      </li>
      <li>
        <%= link_to employees_path, method: :get do %>
            <i class="glyphicon glyphicon-list"></i> Student List
        <% end %>
      </li>
      <li>
        <%= link_to tracks_path, method: :get do %>
            <i class="glyphicon glyphicon-list"></i> Tracks List
        <% end %>
      </li>
      <li>
        <%= link_to new_capacity_path, method: :get do %>
            <i class="glyphicon glyphicon-list"></i> Set Capacity
        <% end %>
      </li>
      <li>
        <%= link_to reset_data_dashboards_path, method: :get do %>
            <i class="glyphicon glyphicon-list"></i> Execute
        <% end %>
      </li>
    </ul>
  </div>
</nav>

<div class="container" style="margin-top: 50px;">
  <%= bootstrap_flash %>
  <%= yield %>
</div>

</body>
</html>
